{
  "name": "invert-color",
  "version": "1.2.0",
  "description": "Generates inverted (opposite) version of the given color.",
  "main": "dist/invert.min.js",
  "scripts": {
    "build:cov": "BABEL_ENV=coverage babel src --out-file dist/.invert.cov.js",
    "build:dev": "BABEL_ENV=development babel src --out-file dist/invert.js",
    "build:prod": "BABEL_ENV=production babel src --out-file dist/invert.min.js",
    "build": "yarn build:dev && yarn build:prod",
    "test": "yarn build:cov && jest --verbose",
    "cover": "yarn build:cov && jest --coverage --verbose --no-cache",
    "coveralls": "cat test/.cov/lcov.info | ./node_modules/coveralls/bin/coveralls.js -v",
    "report": "open test/.cov/lcov-report/index.html"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "@babel/preset-env"
        ],
        "plugins": [
          "@babel/plugin-transform-modules-umd"
        ]
      },
      "production": {
        "presets": [
          "@babel/preset-env",
          "minify"
        ],
        "plugins": [
          "@babel/plugin-transform-modules-umd"
        ]
      },
      "coverage": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/dist",
      "<rootDir>/test"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.js?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/backup/",
      "/.cov/",
      "/anim/"
    ],
    "collectCoverageFrom": [
      "dist/.invert.cov.js"
    ],
    "coverageDirectory": "./test/.cov",
    "mapCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onury/invert-color.git"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "keywords": [
    "color",
    "invert",
    "opposite",
    "generate",
    "hex",
    "rgb"
  ],
  "author": "Onur Yildirim <onur@cutepilot.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onury/invert-color/issues"
  },
  "homepage": "https://github.com/onury/invert-color#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.32",
    "@babel/core": "^7.0.0-beta.32",
    "@babel/plugin-transform-modules-umd": "^7.0.0-beta.32",
    "@babel/preset-env": "^7.0.0-beta.32",
    "babel-preset-minify": "^0.2.0",
    "coveralls": "^3.0.0",
    "jest-cli": "^21.2.1"
  }
}
